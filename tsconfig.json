{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@application/*": ["application/*"],
      "@controllers/*": ["interfaces/http/controllers/*"],
      "@repositories/*": ["domain/repositories/*"],
      "@infraestructure/*": ["infraestructure/*"],
      "@domain/*": ["domain/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}

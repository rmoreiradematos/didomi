{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@application/*": ["src/application/*"],
      "@controllers/*": ["src/interfaces/http/controllers/*"],
      "@repositories/*": ["src/domain/repositories/*"],
      "@infraestructure/*": ["src/infraestructure/*"],
      "@domain/*": ["src/domain/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
